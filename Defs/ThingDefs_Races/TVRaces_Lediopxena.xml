<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <AlienRace.ThingDef_AlienRace ParentName="BasePawn" Abstract="true" Name="BaseLediopxena">

    <defName>TVR_Lediopxena</defName>
    <label>lediopxena</label>

    <alienRace>

        <generalSettings>
            <maleGenderProbability>0.95</maleGenderProbability>
            <immuneToAge>false</immuneToAge>
            <canLayDown>true</canLayDown>

            <maxDamageForSocialfight>8</maxDamageForSocialfight>

            <minAgeForAdulthood>18</minAgeForAdulthood>

            <humanRecipeImport>true</humanRecipeImport>

            <notXenophobistTowards>
                <li>TVR_Lediopxena</li>
            </notXenophobistTowards>

            <alienPartGenerator>
                <aliencrowntypes>
                    <li>Lediopxena_Spider</li>
                </aliencrowntypes>

                <useGenderedHeads>false</useGenderedHeads>
                <useGenderedBodies>false</useGenderedBodies>

                <colorChannels>
                    <li>
                        <name>skin</name>
                        <first Class="ColorGenerator_Options">
                            <options>
                                <li>
                                    <weight>10</weight>
                                    <only>RGBA(0.000, 1.000, 0.000, 1.000)</only>
                                </li>
                                <li>
                                    <weight>10</weight>
                                    <only>RGBA(0.000, 0.500, 1.000, 1.000)</only>
                                </li>
                                <li>
                                    <weight>10</weight>
                                    <only>RGBA(0.000, 0.000, 1.000, 1.000)</only>
                                </li>
                            </options>
                        </first>
                        <second Class="ColorGenerator_Options">
                            <options>
                                <li>
                                    <weight>10</weight>
                                    <only>RGBA(0.500, 1.000, 0.000, 1.000)</only>
                                </li>
                            </options>
                        </second>
                    </li>
                </colorChannels>
                
            </alienPartGenerator>

        </generalSettings>

        <graphicPaths>
            <head>Pawn/Lediopxena/Heads/</head>
        </graphicPaths>

        <hairSettings>
            <hasHair>false</hasHair>
        </hairSettings>

        <relationSettings>
            <relationChanceModifierLover>0.4</relationChanceModifierLover>
            <relationChanceModifierExLover>0.05</relationChanceModifierExLover>

            <relationChanceModifierFiance>0.05</relationChanceModifierFiance>
            <relationChanceModifierSpouse>0.05</relationChanceModifierSpouse>
            <relationChanceModifierExSpouse>0.05</relationChanceModifierExSpouse>

            <relationChanceModifierParent>0.5</relationChanceModifierParent>
            <relationChanceModifierChild>0.005</relationChanceModifierChild>
            <relationChanceModifierSibling>10</relationChanceModifierSibling>

            <renamer>
                </li>
                    <relation>Sibling</relation>
                    <label>Clutchmate</relation>
               </li>
            </renamer>
        </relationSettings>

        <compatibility>
            <isFlesh>true</isFlesh>
            <isSentient>true</isSentient>
            <hasBlood>true</hasBlood>
        </compatibility>

    </alienRace>

    </AlienRace.ThingDef_AlienRace>


    <AlienRace.ThingDef_AlienRace ParentName="BaseLediopxena">
        <defName>TVR_Lediopxena_Weaver</defName>
        <description>A lediopxena with a natural talent at weaving clothes.</description>

        <generalSettings>
            <alienPartGenerator>
                <aliencrowntypes>
                    <li>Lediopxena_Spider</li>
                </aliencrowntypes>
            </alienPartGenerator>
        </generalSettings>

    </AlienRace.ThingDef_AlienRace>



</Defs>
